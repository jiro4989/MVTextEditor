<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<fx:root spacing="5.0" type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <children>
    <javafx.scene.layout.HBox spacing="5.0">
      <children>
        <GridPane gridLinesVisible="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="144.0" prefWidth="144.0">
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          </columnConstraints>
          <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          </rowConstraints>
          <children>
            <AnchorPane>
              <children>
                <Label alignment="CENTER" opacity="0.5" text="顔" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <font>
                    <Font size="20.0" />
                  </font>
                </Label>
                <ImageView fx:id="imageView" fitHeight="144.0" fitWidth="144.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
                <Button mnemonicParsing="false" opacity="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
              </children>
            </AnchorPane>
          </children>
        </GridPane>
        <BorderPane>
          <center>
            <TextArea fx:id="textArea" prefHeight="144.0" promptText="文章がここに表示されます。" BorderPane.alignment="CENTER">
              <BorderPane.margin>
                <Insets />
              </BorderPane.margin>
            </TextArea>
          </center>
        </BorderPane>
      </children>
    </javafx.scene.layout.HBox>
    <HBox alignment="CENTER_RIGHT" spacing="5.0">
      <children>
        <Label text="背景" />
        <ComboBox prefWidth="100.0" value="Window" >
          <items>
            <FXCollections fx:factory="observableArrayList" >
              <String fx:value="Window" />
              <String fx:value="Dark" />
              <String fx:value="Transparent" />
            </FXCollections>
          </items>
        </ComboBox>
        <Label text="ウィンドウの位置" />
        <ComboBox prefWidth="100.0" value="Bottom" >
          <items>
            <FXCollections fx:factory="observableArrayList" >
              <String fx:value="Top" />
              <String fx:value="Middle" />
              <String fx:value="Bottom" />
            </FXCollections>
          </items>
        </ComboBox>
        <Button mnemonicParsing="false" prefWidth="100.0" text="上書き保存" />
      </children>
    </HBox>
  </children>
</fx:root>
